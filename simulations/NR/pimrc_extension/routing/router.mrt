ifconfig:

# interface to the external server
name: ppp0  
    inet_addr: 10.0.4.1
    Mask: 255.255.255.0
    MTU: 1500
    Metric: 1
    POINTTOPOINT MULTICAST

# interface to the nat router    
name: ppp1
    inet_addr: 10.0.3.1
    Mask: 255.255.255.0
    MTU: 1500
    POINTTOPOINT MULTICAST
ifconfigend.

route:

#Destination     Gateway          Genmask          Flags  Metric  Iface
10.0.4.0         *                255.255.255.0    H      0       ppp0
0.0.0.0          *                0.0.0.0          G      0       ppp1

routeend.

