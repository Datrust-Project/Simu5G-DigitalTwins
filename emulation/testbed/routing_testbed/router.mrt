ifconfig:

# interface to the external server
name: eth0  
    inet_addr: 192.168.2.1
    Mask: 255.255.255.0
    MTU: 1500
    Metric: 1
    POINTTOPOINT MULTICAST

# interface to the nat router    
name: ppp0
    inet_addr: 10.0.3.1
    Mask: 255.255.255.0
    MTU: 1500
    POINTTOPOINT MULTICAST
ifconfigend.

# need to specify the gateway so ARP can resolve the MAC address for veth0 
# the ExtLowerEthernetInterface sends packets out using a "packet socket": it means that the
# socket sends Ethernet frames, which need to know the MAC address of the receiving interface
# (veth0 in this case). When the IP address is outside the local network (i.e. another host),
# the routing table must know the gateway address, i.e. the IP address of the interface 
# "physically" connected to the router (veth0 in this case). This means that the gateway must
# explicit in the routing table  
route:
#Destination     Gateway          Genmask          Flags  Metric  Iface
192.168.56.0     192.168.2.2      255.255.255.0    H      0       eth0 
192.168.2.0      *                255.255.255.0    H      0       eth0
0.0.0.0          *                0.0.0.0          G      0       ppp0

routeend.


